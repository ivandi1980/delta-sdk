{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,

    // Emit options
    "noEmit": true, // noEmit diaktifkan untuk pengembangan, tetapi di build akan ditimpa
    "emitDeclarationOnly": true, // Hanya keluarkan file deklarasi
    "declaration": true, // Diperlukan untuk emitDeclarationOnly

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Support for ESM
    "esModuleInterop": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  },
  "ts-node": {
    // Mengatur agar TypeScript dapat berjalan dalam mode ESM dengan ts-node
    "transpileOnly": true,
    "compilerOptions": {
      "module": "ESNext"
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
